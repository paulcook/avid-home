<div id="login" class="yui-g grey">
		<div class="dynasty_box width-half centered">
		<% form_tag (session_path) do %>
		<div><label for="login">Login:</label>
		<%= text_field_tag 'login','',:size=>10 %>
		
		<label for="password">Password:</label>
		<%= password_field_tag 'password','',:size=>10 %>
		
		<%= submit_tag 'Login',:class=>"submit" %>
		</div>

		<p><label for="remember_me">Remember me:</label>
		<%= check_box_tag 'remember_me' %></p>

		<p><%= link_to "Lost or Forgotten Password?", new_password_path %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to "Sign Up", new_user_path %></p>
		<% end %>
		</div>
</div>
