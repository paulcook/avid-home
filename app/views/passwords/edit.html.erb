<div class="yui-b">
<div class="dynasty_box width-half centered with-padding">
	<h2>Reset Password</h2>
<% form_tag password_path(:id=>params[:id]),:method=>:put do %>
    New Password:<br />
    <%= password_field_tag :password %><br />
    Confirm Password:<br />
    <%= password_field_tag :password_confirmation %><br />
    <%= submit_tag "Reset Your Password" %>
<% end %>
</div>
</div>

